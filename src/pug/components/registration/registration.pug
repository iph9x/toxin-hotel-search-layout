include ../text-field/text-field
include ../masked-text-field/masked-text-field
include ../radio-buttons/radio-buttons
include ../toggle/toggle
include ../button/button

form(action="").registration.card-wrapper
  h2.card-title Регистрация аккаунта
  form(action="")
    +text-field({ placeholderText: 'Имя' })
    +text-field({ placeholderText: 'Фамилия' })
    +radio-buttons({})
    +masked-text-field({ title: 'Дата рождения', placeholderText: 'ДД.ММ.ГГГГ' })
    +text-field({ title: 'Данные для входа в сервис', placeholderText: 'Email' })
    +text-field({ placeholderText: 'Пароль' })
    +toggle({ id: 'suggestions', text: 'Получать спецпредложения' })
    +button({ text: 'Зарегистрироваться', class: 'button-fill button-main' })
    .registration__login-wrapper
      span.registration__already-reg Уже есть аккаунт на Toxin
      +button({ text: 'Войти', class: 'button-border' })

