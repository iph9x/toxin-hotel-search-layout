extends ../layouts/main
include ../components/dropdown/dropdown
include ../components/filter-date-dropdown/filter-date-dropdown
include ../components/checkbox-buttons/checkbox-buttons
include ../components/range-slider/range-slider
include ../components/expandable-checkbox-list/expandable-checkbox-list
include ../components/room-card/room-card
include ../components/pagination/pagination
include ../components/rich-checkbox-buttons/rich-checkbox-buttons

block variables
  - var title = 'Search Room'
  - var checkboxArr = [{name: 'Можно курить', id: 'breakfast'}, {name: 'Можно с питомцами', id: 'pet'}, {name: 'Можно пригласить гостей (до 10 человек)', id: 'count'}]
  - var expandableCheckbox = [{name: 'Завтрак', id: 'smoke'}, {name: 'Письменный стол', id: 'table'}, {name: 'Стул для кормления', id: 'chair'}, {name: 'Кроватка', id: 'cot'}, {name: 'Телевизор', id: 'tv'}, {name: 'Шампунь', id: 'shampoo'}]

block content
  main.search-room
    .container.main-container.search-room__container
      .filter
        +filter-date-dropdown({ id: 'datepick', title: 'Даты пребывания в отеле', dateIn: '19 авг', dateOut: '23 авг' })
        +dropdown({ title: 'Гости', placeholderText: 'Сколько гостей', id: 'guests' })
        +range-slider({title: 'Диапазон цены', note: true })
        +checkbox-buttons( {title: 'Правила дома', radios: checkboxArr } )
        +rich-checkbox-buttons({ title: 'Доступность' })
        +dropdown({ title: 'Удобства номера', placeholderText: '2 спальни, 2 кровати', id: 'rooms' })
        +expandable-checkbox-list({ title: 'Дополнительные удобства', radios: expandableCheckbox })
      .rooms
        h1.rooms__title Номера, которые мы для вас подобрали
        .rooms__wrapper
          +room-card({ src: 'assets/img/lux1.png', number: 888, price: '9 990', reviews: 145, lux: true, rating: 5 })
          +room-card({ src: 'assets/img/lux2.png', number: 840, price: '9 900', reviews: 65, rating: 4})
          +room-card({ src: 'assets/img/980.jpg', number: 980, price: '8 500', reviews: 35, lux: true, rating: 3})
          +room-card({ src: 'assets/img/856.jpg', number: 856, price: '7 300', reviews: 19, rating: 5})
          +room-card({ src: 'assets/img/740.jpg', number: 740, price: '6 000', reviews: 44, rating: 4})
          +room-card({ src: 'assets/img/982.jpg', number: 982, price: '5 800', reviews: 56, rating: 3})
          +room-card({ src: 'assets/img/678.jpg', number: 678, price: '5 500', reviews: 45, rating: 5})
          +room-card({ src: 'assets/img/450.jpg', number: 450, price: '5 300', reviews: 39, rating: 4})
          +room-card({ src: 'assets/img/350.jpg', number: 350, price: '5 000', reviews: 77, rating: 3})
          +room-card({ src: 'assets/img/666.jpg', number: 666, price: '5 000', reviews: 25, rating: 5})
          +room-card({ src: 'assets/img/444.jpg', number: 444, price: '5 000', reviews: 15, rating: 3})
          +room-card({ src: 'assets/img/352.jpg', number: 352, price: '5 000', reviews: 55, rating: 3})
        +pagination({})


    
