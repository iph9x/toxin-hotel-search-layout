include ../logo/logo
include ../button/button

mixin header(props)
  header.header
    .header__container
      +logo({})
      .header__menu-btn.js-header__menu-btn
        .header__menu-btn-straight
      .header__menu.js-header__menu
        include ../nav/nav
        if props.isAuth
          .header__profile-wrapper 
            a.header__profile-link(href="/blank.html") Юлий Цезарь
        else
          .header__auth-box
            .header__login-button
              +button({ text: 'Войти', class: 'button-border' })
            +button({ text: 'Зарегистрироваться', class: 'button-fill' })
