include ../checkbox/checkbox

mixin expandable-checkbox-list({ checkboxItems, title, attached })
  - const listIsAttached = attached ? 'attached' : 'none';

  .expandable-checkbox-list.js-expandable-checkbox-list(data-list-attached=listIsAttached)
    .expandable-checkbox-list__wrapper-title.js-expandable-checkbox-list__wrapper-title
      .expandable-checkbox-list__title= title
      .expandable-checkbox-list__arrow.js-expandable-checkbox-list__arrow expand_more
    .expandable-checkbox-list__items.js-expandable-checkbox-list__items
      each checkbox in checkboxItems
        .expandable-checkbox-list__checkbox
          +checkbox({ labelText: checkbox.labelText, name: checkbox.name })