mixin nav()
  -
    const nav = [
      { text: 'О нас', isActive: true },
      { text: 'Услуги', submenu: [{text: 'Услуга 1'}, {text: 'Услуга 2'}, {text: 'Услуга 2'}] },
      { text: 'Вакансии' },
      { text: 'Новости' },
      { text: 'Соглашения', submenu: [{text: 'Соглашение 1'}, {text: 'Соглашение 2'}] },
    ]

  nav.nav
    ul.nav__link-items
      each item in nav
        if item.submenu
          li.nav__item-submenu
            .nav__sub-header(href="/blank.html")= item.text
            ul.nav__submenu
              each subitem in item.submenu
                li.nav__sub-item
                  a.nav__link(href="/blank.html")= subitem.text
        else
          li.nav__item
            a.nav__link(href="/blank.html" class=(item.isActive && 'nav__link_active'))= item.text