mixin like-button({ title, likesCount=12 })
  .like-button
    if (title)
      .like-button__title= title
    .like-button__item
      input.like-button__input.js-like-button__input(type="button" value=likesCount)
      span.like-button__icon
      .like-button__svg-wrapper
        svg.like-button__svg(width="40" height="20" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink")
          defs
            linearGradient(id="like-button-gradient" gradientTransform="rotate(90)")
              stop(offset="0" stop-color="#BC9CFF")
              stop(offset="1" stop-color="#8BA4F9")
            mask(id="Mask")
              rect(x="0" y="0" width="40" height="20" fill="black" stroke-width="1" stroke-linejoin="round" stroke="white" rx="10" ry="10")
          rect.like-button__border(x="0" y="0" width="40" height="20" rx="10" ry="10" mask="url(#Mask)")
    