include ../room-info/room-info
include ../review/review
include ../bullet-list/bullet-list

-
  var roomItems = [
    { content: 'insert_emoticon', title: 'Комфорт', sub: 'Шумопоглощающие стены' },
    { content: 'location_city', title: 'Удобство', sub: 'Окно в каждой из спален' },
    { content: 'whatshot', title: 'Уют', sub: 'Номер оснащен камином' }
  ]

.room-info-block
  .room-info-block__info
    h2.room-info-block__title.room-info-block__info-title Сведения о номере
    +room-info({items: roomItems})
  .room-info-block__rating
    h2.room-info-block__title.room-info-block__rating-title Впечатления от номера
    include ../room-rating-chart/room-rating-chart
  .room-info-block__reviews
    .room-info-block__reviews-title-row
      h2.room-info-block__title.room-info-block__reviews-title Отзывы посетителей номера
      .room-info-block__reviews-count 2 отзыва
    .room-info-block__review-wrapper
      +review({src: 'assets/img/avatar.jpg', name: 'Мурад Сарафaнов', date: '5 дней назад', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
    .room-info-block__review-wrapper
      +review({src: 'assets/img/ava2.png', name: 'Патрисия Стёклышкова', date: 'Неделю назад', text: 'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент'})
  .room-info-block__rules
    h2.room-info-block__title.room-info-block__rules-title Правила
    +bullet-list({className: 'room-info-block__bullet-list'})
  .room-info-block__cancel
    h2.room-info-block__title.room-info-block__cancel-title Отмена
    p.room-info-block__cancel-par Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.